{
  "name": "lasereyes-mono",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:core": "turbo build --filter @kevinoyl/lasereyes-core",
    "build:react": "turbo build --filter @kevinoyl/lasereyes-react",
    "build:lasereyes": "turbo build --filter @kevinoyl/lasereyes",
    "build:ui": "turbo build --filter @kevinoyl/lasereyes-ui",
    "dev": "turbo dev",
    "dev:demo": "turbo dev --filter demo.lasereyes.build",
    "dev:icp": "turbo dev --filter icp-lasereyes-react",
    "dev:docs": "turbo dev --filter lasereyes-docs",
    "dev:react": "turbo dev --filter react-ui",
    "dev:vue": "turbo dev --filter vue-ui",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "version": "changeset version",
    "version-prerelease": "changeset pre exit || true && changeset pre enter next && changeset version",
    "release": "changeset publish",
    "update-package-json": "node scripts/update-package-json.js",
    "revert-package-json": "node scripts/revert-package-json.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/jest": "^29.5.13",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.2",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "5.8.3",
    "vitest": "^2.1.2"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}